<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1E1F31"
    tools:context=".MainActivity">

    <RelativeLayout
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical"
        android:layout_weight="1"
        android:gravity="center"
        android:background="@drawable/headerbg"
        android:padding="12dp"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:layout_marginTop="40dp"
        android:text="Voting Bagaimana Tentang Aplikasi Kami"
        android:textSize="30dp"
        android:textColor="@color/white"/>

    <Button
        android:id="@+id/btnA1"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_alignStart="@+id/btnB1"
        android:layout_below="@+id/textView1"
        android:layout_marginTop="44dp"
        android:drawableLeft="@drawable/ic_smile__1_"
        android:background="@drawable/shape"
        android:text="Puas"
        android:textSize="25dp" />

    <Button
        android:id="@+id/btnB1"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_below="@+id/btnA1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:background="@drawable/shape"
        android:drawableLeft="@drawable/ic_flat_mouth"
        android:text="Kurang Puas"
        android:textSize="25dp" />

    <Button
        android:id="@+id/btnC1"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_below="@+id/btnB1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:background="@drawable/shape"
        android:drawableLeft="@drawable/ic_angry"
        android:text="Tidak Puas"
        android:textSize="25dp" />

    <Button
        android:id="@+id/btnPie"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="663dp"
        android:layout_marginEnd="27dp"
        android:text="Lihat Voting" />

    <Button
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="27dp"
        android:layout_marginTop="663dp"
        android:text="Keluar" />

</RelativeLayout>