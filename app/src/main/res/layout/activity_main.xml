<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#062538"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textA1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="61dp"
        android:gravity="center"
        android:text="Puaskah Anda Dengan Pelayanan Kami ?"
        android:textAlignment="center"
        android:textColor="#FFC800"
        android:textSize="30dp" />

    <Button
        android:id="@+id/btnA1"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="130dp"
        android:background="@drawable/rounded_button"
        android:paddingTop="10dp"
        android:drawableTop="@drawable/ic_wink"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:text="Sangat Puas"
        android:textSize="15dp" />

    <Button
        android:id="@+id/btnC1"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="250dp"
        android:layout_marginTop="130dp"
        android:background="@drawable/rounded_button3"
        android:drawableTop="@drawable/ic_sad"
        android:text="Tidak Puas"
        android:paddingTop="10dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="16dp" />

    <TextClock
        android:id="@+id/jam1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="310dp"
        android:textAlignment="center"
        android:textColor="#FFC800"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/Date"
        android:layout_marginTop="330dp"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:textColor="@color/white"
        android:text="Date"/>

    <Button
        android:id="@+id/btnB1"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="250dp"
        android:layout_marginTop="130dp"
        android:background="@drawable/rounded_button4"
        android:paddingTop="10dp"
        android:drawableTop="@drawable/ic_happy"
        android:textColor="@color/black"
        android:text="Puas"
        android:textStyle="bold"
        android:textSize="16dp" />

    <Button
        android:id="@+id/btnD1"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="130dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="50dp"
        android:paddingTop="10dp"
        android:background="@drawable/rounded_button2"
        android:drawableTop="@drawable/ic_angry"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:text="sangat tdk puas"
        android:textSize="11dp" />

    <Button
        android:id="@+id/btnPie"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="6dp"
        android:layout_marginRight="6dp"
        android:background="@drawable/transparent"
        android:drawableStart="@drawable/ic_vote"
        android:paddingLeft="10dp" />

    <Button
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="60dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="6dp"
        android:background="@drawable/transparent"
        android:drawableStart="@drawable/ic_cancel"
        android:paddingLeft="10dp" />

</RelativeLayout>